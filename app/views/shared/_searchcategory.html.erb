<li class="filter-item-react">
  <span class="filter-item-info" data-element-name="search-filter" data-element-index="0">
    <span>
      <% @categories.each do |i| %>
        <% checked = @c && @c.collect(&:id).include?(i.id) %>
        <%= check_box_tag "category_ids[]", i.id, checked, :id  => "#{i.id}" ,class: "checkbox_submit"%>
        <%= i.title %></p>
      <% end %>
    </span>
  </span>
</li>
