  <% end %>
  <% @equipments.each do |equipment| %>
    <div class="row">
      <div class="card flex-md-row mb-4 box-shadow h-md-250 w-100">
          <li class="selected">
            <%= link_to image_tag(equipment.images_urls[0], width: '200px',height: '250px'), equipment if equipment.images.present?%>
          </li>
        <div class="card-body d-flex flex-column align-items-start">
          <h3 class="mb-0 mb-3">
            <a class="text-dark" href="#"><%= equipment.name %></a>
          </h3>
          <p class="card-text mb-auto">聯絡電話：<%= equipment.tel %></p>
          <p class="card-text mb-auto">信箱：<%= equipment.email %></p>
          <p class="card-text mb-auto">地址：<%= equipment.location %></p>
          <%= link_to '詳細資訊', equipment_path(equipment) , class: "btn btn-xs" %>
          <%= link_to '加入蒐藏', add_cart_path(equipment), method: "post", class: "btn btn-xs" %>
        </div>
      </div>
    </div>
  <% end %>
