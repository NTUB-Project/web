<div class="container mt-5">
    <%= form_tag '/grounds/search' do %>
    <% @regions.each do |i| %>
      <%= i.title %>
      <%= check_box_tag "region_ids[]", i.id, false, :id  => "#{i.id}" ,class: "checkbox_submit"%>
    <% end %>
    <% end %>

  <% @grounds.each do |ground| %>
    <div class="row">
      <div class="card flex-md-row mb-4 box-shadow h-md-250 w-100">
        <% for images in ground.images_urls %>
          <li class="selected">
            <td><%= link_to image_tag(images, width: '200px',height: '250px'), ground if ground.images.present?%></td>
          </li>
        <% end %>
        <div class="card-body d-flex flex-column align-items-start">
          <h3 class="mb-0 mb-3">
            <a class="text-dark" href="#"><%= ground.name %></a>
          </h3>
          <p class="card-text mb-auto">聯絡電話：<%= ground.tel %></p>
          <p class="card-text mb-auto">信箱：<%= ground.email %></p>
          <p class="card-text mb-auto">地址：<%= ground.location %></p>
          <%= link_to '詳細資訊', ground_path(ground,@detail) , class: "btn btn-xs" %>
          <%= link_to '加入蒐藏', add_cart_path(ground), method: "post", class: "btn btn-xs" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
