<div class="activitycontent">
  <div class="container">
    <div class="row">
      <div id="searchPageLeftColumn" class="col-sm-12 col-md-4 col-lg-3">
        <div id="joinedFilterList">
          <div class="filter-list filter-list-react filter-list--vertical" data-selenium="filter-list">
            <div class="filters-header-text">
              <div style="display: block;">
                <i class="ficon ficon-filter-icon"></i>
                <p>自訂篩選</p>
              </div>
            </div>
            <div id="filtersContainerReact" class="filtersContainerReact">
              <div>
                <div class="filters-container" data-selenium="filter-container">
                  <ul class="filters-list">
                    <li id="dealsFilterList" class="filter-box filter-box--list dealsFilterList" data-selenium="filter-box">
                      <div class="filter-menu">
                        <span class="list-filter__title">地區</span>
                      </div>
                      <div class="filter-items">
                        <ul class="list-filter__items filter-list-item">
                          <li class="filter-item-react">
                            <span class="filter-item-info" data-element-name="search-filter" data-element-index="0">
                              <span>
                                <input type="checkbox" class="checkbox-icon">
                              </span>
                              <span>
                                <span class="filter-item-content" data-selenium="filter-item-text">五折以下折扣</span>
                              </span>
                            </span>
                          </li>
                          <li class="filter-item-react">
                            <span class="filter-item-info" data-element-name="search-filter" data-element-index="1">
                              <span>
                                <input type="checkbox" class="checkbox-icon">
                              </span>
                              <span>
                                <span class="filter-item-content" data-selenium="filter-item-text">A級機密價</span>
                              </span>
                            </span>
                          </li
                        </ul>
                        <div class="filter-options clearfix"></div>
                      </div>
                    </li>
                    <li id="dealsFilterList" class="filter-box filter-box--list dealsFilterList" data-selenium="filter-box">
                      <div class="filter-menu">
                        <span class="list-filter__title">折扣</span>
                      </div>
                      <div class="filter-items">
                        <ul class="list-filter__items filter-list-item">
                          <li class="filter-item-react">
                            <span class="filter-item-info" data-element-name="search-filter" data-element-index="0">
                              <span>
                                <input type="checkbox" class="checkbox-icon">
                              </span>
                              <span>
                                <span class="filter-item-content" data-selenium="filter-item-text">七折以下折扣</span>
                              </span>
                            </span>
                          </li>
                          <li class="filter-item-react">
                            <span class="filter-item-info" data-element-name="search-filter" data-element-index="1">
                              <span>
                                <input type="checkbox" class="checkbox-icon">
                              </span>
                              <span>
                                <span class="filter-item-content" data-selenium="filter-item-text">B級機密價</span>
                              </span>
                            </span>
                          </li
                        </ul>
                        <div class="filter-options clearfix"></div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="searchPageRightColumn" class="col-sm-12 col-md-8 col-lg-9">
        <% @grounds.each do |ground| %>
          <div class="row">
            <div class="card flex-md-row mb-3 box-shadow h-md-250 w-100">
                <a data-fancybox="gallery">
                  <%= link_to image_tag(ground.images_urls[0], width: '200px',height: '250px'), ground if ground.images.present?%>
                </a>
              <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0 mb-3">
                  <a class="text-dark" href="#"><%= ground.name %></a>
                </h3>
                <p class="card-text mb-auto">
                  <%= image_tag("house.png")%>
                  <a><%= ground.name %></a>
                </p>
                <p class="card-text mb-auto">
                  <%= image_tag("marker.png")%>
                  <a><%= ground.location %></a>
                </p>
                <p class="card-text mb-auto">
                  <%= image_tag("person.png")%>
                  <a><%= ground.people_number.title %></a>
                </p>
                <%= link_to '詳細資訊', ground_path(ground) , class: "btn btn-xs" %>
                <%= link_to '加入蒐藏', add_cart_path(ground), method: "post", class: "btn btn-xs" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
