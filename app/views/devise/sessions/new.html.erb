<div class="devise_content">
  <h3 class="devise_title">會員登入</h3>
  <div class="container">
    <div class="login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.label :email, "信箱：" %>
        <%= f.email_field :email , placeholder: 'ex: user@gmail.com',required: false, autofocus: true%></br>
        <%= f.label :password, "密碼：" %>
        <%= f.password_field :password , required: false%>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "登入", class: "btn" %>
      </div>
      <% end %>
      <div class="devise_link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
