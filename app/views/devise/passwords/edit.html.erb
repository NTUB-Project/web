<div class="devise_content">
  <h3 class="devise_title">更改密碼</h3>
  <div class="container">
    <div class="login">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
  
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
      
        <div class="form-inputs">
          <%= f.input :password, label: "新密碼：", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "確認新密碼：", required: true %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Change my password" %>
        </div>
      <% end %>
      
      <div class="devise_link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

