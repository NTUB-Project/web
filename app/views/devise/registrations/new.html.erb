<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<form>
  <div class="form-group">
    <%= f.label :email, required: true, autofocus: true  %>
    <input type="email" class="form-control mb-4" id="exampleFormControlInput1" placeholder="name@gmail.com">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , class: "form-control", id: "exampleInputPassword1"%>
    <%= f.input :password_confirmation, required: true, class: "form-control", id: "exampleInputPassword1" %>
  </div>
</form>

  <div class="form-actions">

    <%= f.button :submit, "確定" ,class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
