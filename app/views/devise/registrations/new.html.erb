<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :email ,label: "Email" , autofocus: true, autocomplete: "email" %>
  <%= f.input :password ,label: "密碼(至少#{@minimum_password_length}字元)" , autocomplete: "off" %>
  <%= f.input :password_confirmation ,label: "密碼確認" , autocomplete: "off", autocomplete: "email" %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
