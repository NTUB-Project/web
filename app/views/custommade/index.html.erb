<div class="container mt-5">
  <%= form_tag '/custommade/search' do %>
    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Region</label>
    <%= select_tag 'region', options_for_select(@regions.collect{ |region| [region.title, region.id] }) %>
    <%= submit_tag "Search" %>
  <% end %>
  <% @custommades.each do |custommade| %>
    <div class="row">
      <div class="card flex-md-row mb-4 box-shadow h-md-250 w-100">
        <% for images in custommade.images_urls %>
          <li class="selected">
            <td><%= link_to image_tag(images, width: '200px',height: '250px'), custommade if custommade.images.present?%></td>
          </li>
        <% end %>
        <div class="card-body d-flex flex-column align-items-start">
          <h3 class="mb-0 mb-3">
            <a class="text-dark" href="#"><%= custommade.name %></a>
          </h3>
          <p class="card-text mb-auto"><%= custommade.description %></p>
          <p class="card-text mb-auto">聯絡電話：<%= custommade.tel %></p>
          <p class="card-text mb-auto">信箱：<%= custommade.email %></p>
          <%= link_to '詳細資訊', custommade_path(custommade,@costume_id) , class: "btn btn-xs" %>
          <%= link_to '加入蒐藏', add_cart_path(custommade), method: "post", class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
