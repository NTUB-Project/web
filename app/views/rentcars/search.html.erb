<div class="container mt-5">

  <% @rentcars.each do |rentcar| %>
    <div class="row">
      <div class="card flex-md-row mb-4 box-shadow h-md-250 w-100">
        <% for images in rentcar.images_urls %>
          <li class="selected">
            <td><%= link_to image_tag(images, width: '200px',height: '250px'), rentcar if rentcar.images.present?%></td>
          </li>
        <% end %>
        <div class="card-body d-flex flex-column align-items-start">
          <h3 class="mb-0 mb-3">
            <a class="text-dark" href="#"><%= rentcar.name %></a>
          </h3>
          <p class="card-text mb-auto">聯絡電話：<%= rentcar.tel %></p>
          <p class="card-text mb-auto">信箱：<%= rentcar.email %></p>
          <p class="card-text mb-auto">地址：<%= rentcar.location %></p>
          <%= link_to '詳細資訊', rentcar_path(rentcar,@detail) , class: "btn btn-xs" %>
          <%= link_to '加入蒐藏', add_cart_path(rentcar), method: "post", class: "btn btn-xs" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
