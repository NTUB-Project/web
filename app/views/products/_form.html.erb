
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.file_field :images, multiple: true, name: "product[images][]" %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :tel %>
    <%= f.input :email %>
    地區：</br>
    <%= f.collection_check_boxes :region_ids, Region.all, :id, :title, { multiple: true }  %></br>
    活動類型：</br>
    <%= f.collection_check_boxes :activity_kind_ids, ActivityKind.all, :id, :title, { multiple: true }  %>
    <%= f.association :category %>
    <%= f.association :people_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
