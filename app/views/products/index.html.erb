<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th>Location</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Category</th>
      <th>Region</th>
      <th>Activity kind</th>
      <th>People number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.image %></td>
        <td><%= product.description %></td>
        <td><%= product.location %></td>
        <td><%= product.tel %></td>
        <td><%= product.email %></td>
        <td><%= product.category.title %></td>
        <td><%= product.region_ids %></td>
        <td><%= product.activity_kind.title %></td>
        <td><%= product.people_number.title %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

