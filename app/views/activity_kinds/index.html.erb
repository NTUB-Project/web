<p id="notice"><%= notice %></p>

<h1>Activity Kinds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_kinds.each do |activity_kind| %>
      <tr>
        <td><%= activity_kind.title %></td>
        <td><%= link_to 'Show', activity_kind %></td>
        <td><%= link_to 'Edit', edit_activity_kind_path(activity_kind) %></td>
        <td><%= link_to 'Destroy', activity_kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity Kind', new_activity_kind_path %>
