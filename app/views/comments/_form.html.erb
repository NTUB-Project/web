<%= simple_form_for [@product_id, Comment.new] do |f| %>
  <div class="form-group">
    <div class="field">
      <div id="star-rating"></div>
    </div>
    <%= f.file_field :images , multiple: true, name: "comment[images][]"%>
    <%= f.input :content%>
  </div>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/uploads/ratyrate/image/',
    scoreName: 'comment[rating]'
  });
</script>
