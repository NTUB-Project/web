<table class="table">
<thead>
  <tr>
      <th><%= render "comments/form"%></th>
  </tr>
  <th>留言者</th>
  <th>留言</th>
  <th>時間</th>
   <th colspan="4"></th>
 </tr>
</thead>
<tbody>

 <% @comments.each do |comment| %>
   <tr>
     <td><%= comment.user.email%></td>
     <td><%= comment.content %></td>
     <td><%= comment.updated_at%></td>
     <td>
       <% if user_signed_in? %>
         <% if current_user.id == comment.user_id %>
           <%= link_to("Edit", edit_product_comment_path(comment.product, comment),
                       class: "btn btn-default btn-xs")%>
           <%= link_to("Delete", product_comment_path(comment.product, comment),
                       class: "btn btn-default btn-xs ", method: :delete,
                       data: { confirm: "Are you sure?" } )%>
          <% end %>
        <% end %>
     </td>
   </tr>
 <% end %>
 <tr><td><%= will_paginate @comments%></td></tr>
</tbody>
</table>
