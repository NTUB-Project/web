<%= form_tag(matter_cart_path(@custumes),method: :put)  do %>
  <% @grounds.each do |item| %>
  <div class="message1">
    <div class="card flex-md-row mb-3 box-shadow h-md-250 w-100">
      <div class="col-md-4 col-lg-3">
        <%= check_box_tag "item_id[]",item.product.id %>
        <%= image_tag('logo.png', width: '100',height: '100px')%>
      </div>
      <div class="col-md-6 col-lg-7 card-text">
        <h3><%=item.product.name%></h3>
        <p><%= image_tag("marker.png", width: '20px',height: '20px')%><%= item.product.location %></p>
        <p><%= image_tag("telephone.png", width: '20px',height: '20px')%><%= item.product.tel %></p>
      </div>

      <div class="col-md-2 col-lg-2 trace_cell trace_delete">
        <%=image_tag('cancel.png', class: "delete_icon")  %>
        <div class="delete_text delete_btn" data-module="domhotel" data-id="3471" data-status="normal">
          <%= link_to  "刪除", remove_cart_path(item.product_id), method: :put %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <tr><td><%= submit_tag '寄信', class: "btn btn-default" %></td></tr>
<% end %>
