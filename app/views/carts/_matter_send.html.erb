<div class="modal-header">
  <% if @errors_matter_send!= nil %>
    <h4 class="modal-title" id="myModalLabel">錯誤</h4>
  <% else %>
    <h4 class="modal-title" id="myModalLabel">預覽</h4>
  <% end %>

  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
<% if @errors_matter_send!= nil %>
  <div id="errors_div"></div>
<% else %>
  <% i = 0 %>
    <% if @item_id != nil %>
      <% @item_id.each do |item_id|%>
        <span><%= Product.find(item_id).name %></span>，您好！
        <% if params[:Radios]== "option2" %>
          <p><%= @matter.mattertext.split(',')[i].split('"')[1] %></p>
          <% i += 1 %>
        <% else %>
          <p><%= @matter.mattertext %></p>
        <% end %>
      <% end %>
    <% end %>
<% end %>
</div>
