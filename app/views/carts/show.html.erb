<h1>蒐藏清單</h1>
<div class="w3-bar w3-black">
  <button class="w3-bar-item w3-button" onclick="openCategory('Ground')">場地</button>
  <button class="w3-bar-item w3-button" onclick="openCategory('Food')">食物</button>
  <button class="w3-bar-item w3-button" onclick="openCategory('Rentcar')">租車</button>
  <button class="w3-bar-item w3-button" onclick="openCategory('Equipment')">設備</button>
  <button class="w3-bar-item w3-button" onclick="openCategory('Custommade')">印刷</button>
  <button class="w3-bar-item w3-button" onclick="openCategory('Costume')">舞台服</button>
</div>

<div id="Ground" class="w3-container categor">
  <h2>場地：</h2>
  <div class="content">
    <div class="container">
      <% if @grounds != []%>
        <%= render "ground" %>
      <% end %>
    </div>
  </div>
</div>
  
