<h1>蒐藏清單</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>名稱</td>
      <td>地址</td>
    </tr>
  </thead>
  <tbody>
    <% current_cart.items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.product.location %></td>
        <td><%= link_to  "刪除", remove_cart_path(item.product.id), method: :put ,class: "btn btn-default "%></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot></tfoot>
</table>
