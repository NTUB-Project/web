<%= simple_form_for matter_cart_path(@matter_form)  , :url => {:action => :matter_form_send } do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "聯絡信箱：" %>
    <%= f.input :school, label: "學校/單位：" %>
    <%= f.input :date, label: "活動日期：", as: :datetime, start_year: Date.today.year,end_year: Date.today.year + 5, discard_day: true %>
    <%= f.input :activity_location, label: "活動地點" %>
    <%= f.input :people, label: "預估活動人數：" %>
    <%= f.input :vegetarian, label: "預估葷食人數：" %>
    <%= f.input :non_vegetarian, label: "預估素食人數：" %>
    <%= f.input :expect_menu, label: "必要的菜色：" %>
    <%= f.input :budget, label: "預算：" %>
    <%= f.input :memo, label: "備註：" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit,"寄出" %>
    <%= f.button :submit,"預覽" %>
  </div>
<% end %>
