<% if @matter_form != nil %>
  <% if @matter_form.errors.any? %>
  <ul>
  <% @matter_form.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
  </ul>
  <% end %>
<% end %>
<%= simple_form_for matter_cart_path(@item_id)  , :url => {:action => :matter_form_send } do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "聯絡信箱：" , readonly: true, :input_html => { :value => "#{current_user.email}" }%>
    <%= f.input :school, label: "學校/單位：" %>
    <%= f.input :date, label: "活動日期：", as: :datetime, start_year: Date.today.year,end_year: Date.today.year + 5%>
    <%= f.input :activity_location, label: "活動地點" %>
    <%= f.input :people, label: "預估活動人數：" %>
    <%= f.input :vegetarian, label: "預估葷食人數：" %>
    <%= f.input :non_vegetarian, label: "預估素食人數：" %>
    <%= f.input :expect_menu, label: "必要的菜色：" %>
    <%= f.input :budget, label: "預算：" %>
    <% if @product.count > 1 %>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="Radios" id="Radios1" value="option1" checked>
        <label class="form-check-label" for="Radios1">
          統一備註內容
        </label>
          <%= f.input :memo, label: "備註：" %>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="Radios" id="Radios2" value="option2">
        <label class="form-check-label" for="Radios2">
          分開備註內容
        </label></p>
        <% @product.each do |product| %>
          給<%= product.name %>的備註內容：
          <input name= <%= product.id %> > </p>
        <% end %>
      </div>
    <% else %>
      <%= f.input :memo, label: "備註：" %>
    <% end %>
    <%= f.file_field :images, multiple: true, name: "#{matter_cart_path(@item_id)}[images][]"%>
  </div>
  <div class="form-actions">
    <%= f.button :submit,"寄出" %>
    <%= f.button :submit,"預覽" %>
  </div>
<% end %>
