<div class="cart_content">
  <div class="container">
  <div class="sub_title">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active">
        <button class="click_log" id="Selfbtn" onclick="openCategory('Self'),changeColor('Selfbtn')">自行輸入</button>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link">
        <button class="click_log" id="Formbtn" onclick="openCategory('Form'),changeColor('Formbtn')">表格</button>
        </a>
      </li>
    </ul>
  </div>
  
<div id="Self" class="categor">
    <div class="cartform">
      <h3>輸入信件內容</h3>
      <%= simple_form_for matter_cart_path(@matter) , :url => {:action => :matter_send } do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: "聯絡信箱：" %>
          <%= f.input :mattertext, label: "信件內容：" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit,"寄出" %>
        </div>
      <% end %>
    </div>
  
</div>


<div id="Form" class="categor" style="display:none">
    <div class="cartform">
    <% case @category %>
      <% when 1 %>
        <%= render "carts/matter_form/ground"%>
      <% when 2 %>
        <%= render "carts/matter_form/food"%>
      <% when 3 %>
        <%= render "carts/matter_form/rentcar"%>
      <% when 4 %>
        <%= render "carts/matter_form/equipment"%>
      <% when 5 %>
        <%= render "carts/matter_form/custommade"%>
      <% when 6 %>
        <%= render "carts/matter_form/costume"%>
    <% end %>
    </div>
  
</div>

</div>
</div>

<script>
function openCategory(categoryName) {
  var i;
  var x = document.getElementsByClassName("categor");
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";
  }
  document.getElementById(categoryName).style.display = "block";
}
function changeColor(btnName) {
  var x = document.getElementsByClassName("click_log");
  for (i = 0; i < x.length; i++) {
     x[i].style.color = "black";
  }
  document.getElementById(btnName).style.color = "TEAL";
}
</script>
