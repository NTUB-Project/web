<div class="content	">
  <% @costumes.each do |costume| %>
		<button type="button" onClick="history.back()" class="backbtn">Back</button>
		<button type="button" onClick="location.href='../cart'" class="addbtn" >Collect</button>
		<button type="button" onClick="location.href='http://www.hanastage.tw/'" class="connectbtn">connect</button>
		<div class="detail">
      <div class="star-rating" data-score=<%= @avg_rating %> ></div>
      <em><%= "#{@comments.length} 則留言"%></em>
			<div class="name"><h1><%= costume.name %></h1></div>
			<div class="introduce">
				<h2>簡介</h2>
				<p><%= costume.name %></p>
			</div>
		</div>
		<div class="detail2">
      <% for images in costume.images_urls %>
        <a data-fancybox="gallery">
          <%= link_to image_tag(images, width: '200px',height: '250px'), costume if costume.images.present?%>
        </a>
      <% end %>
		</div>
		<div class="detail3">
			<div class="icons">
			  <%= image_tag("projector.png")%>
			  <%= image_tag("computer.png")%>
			  <%= image_tag("sofa.png")%>
			  <%= image_tag("drum-set.png")%>
			  <%= image_tag("karaoke.png")%>
			  <%= image_tag("parking.png")%>
			  <%= image_tag("speaker.png")%>
			  <%= image_tag("spotlight.png")%>
			  <%= image_tag("stage.png")%>
			</div>
		</div>
		<div class="detail4">
			<h2>聯絡資訊</h2>
			<p>電話號碼：<%= costume.tel %></p>
			<p>地址：<%= costume.location %></p>
		</div>
		<div class="detail5">
			<h2>地理位置</h2>
      <div id="map" style="width:100%;height:400px">地圖預留</div>
		</div>


		<%=render "comments/index" %>

  <% end %>
</div>
<!--------------------TOP------------------------->
<div class="backtotop">
	<a class="top" href="#"> <%= image_tag("top-arrow.png")%></a>
</div>

<%=render "shared/vendormapjs" %>
